          <div class="form__label">
            Color:
            <span class="form__label__value">
            {% if product.metafields.custom.color_custom_title != blank %}
              {{ product.metafields.custom.color_custom_title }}
            {% else %}
              {{ product.title }}
            {% endif %}
          </span>
          </div>
        </div>
        <div class="product__custom-colors">
          <div class="tab_variants row_flex align-items-center">
            <div class="col-auto titles">Color: {% if product.metafields.custom.color_custom_title != blank %}
                {{ product.metafields.custom.color_custom_title }}{% else %}{{ product.title }}{% endif %}</div>
          </div>
          <div class="product__custom-color active" style="background-image: url('{{ product.media[0].preview_image | img_url: 'master' }} center/100%;')"></div>
          {% for item in additionalProducts.value %}
            {% comment %}{{ item.metafields.custom.color_custom_image }}{% endcomment %}
            {% comment %}{{ item.metafields.custom.color_custom_title }}{% endcomment %}
            <a class="product__custom-color" href="{{ item.url }}" style="background-image: url('{% if item.metafields.custom.color_custom_image != blank %}{{ item.metafields.custom.color_custom_image | img_url: 'master' }}{% else %}{{ item.media[0].preview_image | img_url: 'master' }}{% endif %} center/100%;')"></a>
