<div class="js-sizechart-lightbox" id="size-chart{{ product.id }}" style="display: none">
  <div class="size-chart-wrap">
    {% assign product_tags = product.tags | join: ' ' %}
    {% if product_tags contains 'slide-size-chart' %}
      {% for tag in product.tags %}
        {% if tag contains 'slide-size-chart' %}
          {% assign slide_size_chart = tag | handle | remove: 'meta-size-chart-' %}
          <h5 class="center">{{ pages[slide_size_chart].title }}</h5>
          <div class="feature_divider"></div>
          {{ pages[slide_size_chart].content }}
        {% endif %}
      {% endfor %}
    {% elsif settings.slide_size_chart != blank %}
      <h5 class="center">{{ pages[settings.slide_size_chart].title }}</h5>
      <div class="feature_divider"></div>
      {{ pages[settings.slide_size_chart].content }}
    {% endif %}
  </div>
</div>