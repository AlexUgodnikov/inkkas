
{%- style -%}

.how-looks-on-you-wrp{
  overflow:hidden;
}
how-itlooks-o-nyou{
  position:relative;
  display:block;
  
}
how-itlooks-o-nyou .swiper-slide{
  height:auto;
}
how-itlooks-o-nyou .swiper-slide:after{
  display: block;
    content: "";
    padding-bottom: calc(100% /(.65));
}
how-itlooks-o-nyou .swiper-slide video, how-itlooks-o-nyou .swiper-slide img{
  position:absolute;
  top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    display: block;
    object-fit: cover;
    object-position:center;
}
how-itlooks-o-nyou .swiper-slide video{
  /*height:100%;
  width:100%;
