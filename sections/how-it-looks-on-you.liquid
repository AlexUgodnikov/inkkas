  margin-top: 15px;
    align-items: center;
    display: flex;
    justify-content:center;
}
how-itlooks-o-nyou .swiper-pagination-bullet{
  width:5px;
  height:5px;
}
how-itlooks-o-nyou .swiper-pagination-bullet-active{
  width:9px;
  height:9px;
  background-color:#C95137;
}
.play-video{
  position:absolute;
  left:50%;
  top:50%;
  width:50px;
  height:50px;
  margin-left:-25px;
  margin-top:-25px;
