{{- 'gallery.css' | asset_url | stylesheet_tag -}}
{%- liquid
	assign columns_desktop = section.settings.columns_desktop
	assign section_width = section.settings.section_width
	assign column_spacing = section.settings.column_spacing
	assign content_position = section.settings.content_position
	assign text_alignment = section.settings.text_alignment
	assign mobile_swipe = section.settings.mobile_swipe
	assign image_ratio = section.settings.image_ratio
	assign heading_size = section.settings.heading_size
	assign overlay_color = section.settings.overlay_color
	assign overlay_opacity = section.settings.overlay_opacity
	assign disable_top_spacing = section.settings.disable_top_spacing
	assign disable_bottom_spacing = section.settings.disable_bottom_spacing
	assign show_dots_setting = section.settings.show_dots

	assign show_dots = false
	assign dots_class = ''
	if show_dots_setting
		assign show_dots = true
		assign dots_class = 'custom-dots'
	endif
	assign autoplay = section.settings.autoplay
	if autoplay
		assign autoplay = section.settings.autoplay_length | times: 1000
	endif
-%}

{% style %}
	#gallery-{{ section.id }}{
		padding-bottom:25px;
	}
	.slider-pagination-{{ section.id }}{
		padding-top:0;
	}
	.pagination-{{ section.id }}{
		position:static;
		display:flex;
		align-items:center;
		justify-content:center;
		gap: 0 10px;
	}


{% endstyle %}
<div class="row {{ section_width }}">
	<div class="small-12 columns">
		<div id="gallery-{{ section.id }}" style="--color-bg:rgba(0,0,0,0); --color-text:#151515;" class="{% if section.settings.slider %}swiper {% endif %}gallery gallery-spacing--{{ column_spacing }} text-{{ text_alignment }}{% if mobile_swipe and section.settings.slider != true %} swipe-on-mobile{% endif %} section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}" style="--gallery-columns: {{ columns_desktop }};--overlay-color-rgb: {{ overlay_color.rgb | replace: ' ' , ',' }}; --overlay-opacity: {{ overlay_opacity | divided_by: 100.0 }}">
			<div class="swiper-wrapper gallery__inner" {% if section.settings.slider %}style="display: flex;" {% endif %}>
				{%- for block in section.blocks -%}
					<div class="gallery__item swiper-slide" {{ block.shopify_attributes }}{% if section.settings.slider %} style="cursor: pointer;" {% endif %}>
						{%- liquid
							assign ratio = 1
							if image_ratio == 'adapt' and block.settings.image
								assign ratio = block.settings.image.aspect_ratio
							endif
							
							assign product_list = block.settings.product_list
						-%}
						<figure class="aspect-ratio aspect-ratio--{{ image_ratio }}" style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;">
							{%- if block.settings.image -%}
								{%- liquid
									assign sizes = '375x0,750x0'

									unless section_width == 'grid'
										assign sizes = sizes | append: ',1125x0'
									endunless
								-%}
								{%- render 'responsive-image', image: block.settings.image, sizes: sizes -%}
							{%- else -%}
								{{ 'image' | placeholder_svg_tag: 'placeholder_svg_tag' }}
							{%- endif -%}
							<div class="gallery__item-content content-{{ content_position }}">
								<div>
									{% if block.settings.subheading != blank %}
										<p class="subheading">{{ block.settings.subheading }}</p>
									{% endif %}
									{% if block.settings.title != blank %}
										<h4 class="{{ heading_size }}">{{ block.settings.title }}</h4>
									{% endif %}
									{% if block.settings.text != blank %}
										<p>{{ block.settings.text }}</p>
									{% endif %}
									{% if block.settings.link_label != blank %}
										{% liquid
											assign button_class = 'button white'
											if block.settings.use_text_button
												assign button_class = 'text-button white'
											endif
										-%}
										<a class="{{ button_class }}"{% if block.settings.link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.link }}"{% endif %} aria-label="{{ block.settings.link_label }}"><span>{{ block.settings.link_label }}</span></a>
									{% endif %}
									{% if block.settings.block_link != blank %}
										<a href="{{ block.settings.block_link }}" class="gallery__item-content-link" ></a>
									{% endif %}
								</div>
							</div>
							{%- if product_list.count > 0 -%}
								<view-products class="view-products" data-target="#View-Products-{{ section.id }}-{{ block.id }}">{%- render 'svg-icons' with 'cart' %}<span>{{ 'general.shop_the_look' | t }}</small></view-products>
							{% endif %}
						</figure>
					</div>
				{%- endfor -%}
			</div>
			 <div class="slider-pagination-{{ section.id }} swiper-slider-pagination" style="--dot-speed: {{ autoplay | divided_by: 1000 | append: 's' }};">
                <div class="pagination-{{ section.id }} slider-pagination swiper-pagination"></div>
              </div>
		</div>
	</div>
</div>
{%- for block in section.blocks -%}
	{%- if block.settings.product_list.count > 0 -%}
		<div class="side-panel view-products-panel" id="View-Products-{{ section.id }}-{{ block.id }}" tabindex="-1">
			<div class="side-panel-inner">
				<div class="side-panel-header">
					<div>
						<h4>{{ 'general.shop_the_look' | t }}</h4>
						<side-panel-close class="side-panel-close" tabindex="0">{%- render 'svg-icons' with 'close' -%}</side-panel-close>
					</div>
				</div>
				<div class="side-panel-content">
					{%- for item in block.settings.product_list -%}
						{%- render 'product-card-small', product_small: item, quick_add: true -%}
					{%- endfor -%}
				</div>
			</div>
		</div>
		<script src="{{ 'product.js' | asset_url }}" defer="defer"></script>
		<script src="{{ 'view-products.js' | asset_url }}" defer="defer"></script>
	{%- endif -%}
{%- endfor -%}
{% if section.settings.slider %}
	<script>
		document.addEventListener('DOMContentLoaded', () => {
			
				const sliderGallery = new Swiper('#gallery-{{ section.id }}', {
					spaceBetween: 10,
					slidesPerView: 4,
					slidesPerGroup: 4,
					 speed: 1000, 
					 pagination: {
						el: document.querySelector('.pagination-{{ section.id }}'),
						clickable: true,
						renderBullet: function (index, className) {
							// You can use an <img> tag, SVG icon, or a font icon here
							if(window.innerWidth <= 600){
								if(index > 12) {
									document.querySelector('.pagination-{{ section.id }}').style.overflowX = 'scroll';
									document.querySelector('.pagination-{{ section.id }}').style.padding = '10px';
									document.querySelector('.pagination-{{ section.id }}').style.maxWidth = '90%';
									document.querySelector('.pagination-{{ section.id }}').style.justifyContent = 'flex-start';
									document.querySelector('.pagination-{{ section.id }}').style.margin = 'auto';
								}
							}
							
							return `<span class="${className} custom-timeout-dot dot" aria-label="${index}">
								{%- render 'svg-icons' with 'thb-pagination-dot' -%}
							</span>`;
						},
					},
					{% if section.settings.autoplay %}
					 autoplay: {
						delay: {{section.settings.autoplay_length | times: 1000}},
					},
					{% endif %}
					breakpoints: {
						0: {
							slidesPerView: 1,
							slidesPerGroup: 1,
							spaceBetween:0
						},
						450: {
							slidesPerView: 2,
							slidesPerGroup: 2,
							spaceBetween: 10,
						},
						576: {
							slidesPerView: 3,
							slidesPerGroup: 3
						},
						991: {
							slidesPerView: 4,
							slidesPerGroup: 4
						},
					}
				});
	
		});
	</script>
{% endif %}
